	color: #ffff;
	 padding: 3%;
    height: 34px;
    font-weight: 600;
	 border-top-right-radius: 1rem;
    border-bottom-right-radius:1rem;
}

h3{
	margin-top: 0.5%;

    text-align: center;
}
.btn:focus, .btn:active {
 background-color: #19407e;
}
.btn{
	background-color:#618685;
    border:none;
    color:#fff;
    float: right;
 margin-left: 5%;
	font-family: lucida sans;
	
	 outline: none !important;
  box-shadow: none !important;
	
}
.btn:hover{
  color: #fff;
    background-color: #19407e;
   
}


#re{
	margin-top:1%; 
}

</style>
</head>
<body>
<form action="/editEmp"  method="POST">
<div class="container-fluid register">
<div class="row">
<div class="col-md-3 regleft">
<img id="regimg" src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
<h3>Welcome</h3>
<p>We will keep your personal information private</p>
</div>
<div class="col-md-9 regright">
<div class="tab-content" id="TC">
<div class="tab-pane fade show active" id="employer">
<h3 >Edit Your Profile</h3><br>
<% for(var i=0 ; i<employers.length ; ++i) {%>
<div class="row register-form">
    <div class="col-md-6">

        <div class="form-group">
        <label>First Name</label> 
        <input type="text" id="efn" class="form-control" name="employer_fname" pattern="[A-Za-z]+" placeholder="Your first name"  value= <%=employers[i].Employer_Fname %> required/>
        </div>
        <div class="form-group"> 
        <label>Last Name</label>
        <input type="text" id="eln" class="form-control" name="employer_lname" pattern="[A-Za-z]+" placeholder="Your last name" value= <%=employers[i].EmployerLname %> required />
        </div>
        <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="employer_address"  placeholder="Address" value= <%=employers[i].Employer_Address %> required/>
        </div>
        <div class="form-group" >
            <label>Contact # </label>
            
            <input type="tel" id="emn" class="form-control" name="employer_number" placeholder="03XXXXXXXXX" pattern="[0]{1}[3]{1}[0-9]{9}" maxlength="11" value= <%=employers[i].Employer_Contact %> required>
        </div>
        <div class="form-group">
        <label>City</label>
        <select class="form-control" name="city" required>
        <option selected disabled><%=employers[i].Employer_City %></option>
        <option value="Wah Cantt">Wah Cantt</option>
        <option value="Islamabad">Islamabad</option>
        <option value="Karachi">Karachi</option>
        </select>
        </div>
        </div>
        <div class="col-md-6">
        <div class="form-group">
        <label>Type </label>
        <select class="form-control" name="jobtype" required>
        <option selected disabled><%=employers[i].preference%></option>
        <option value="Part Time">Part Time</option>
        <option value="Full Time">Full Time</option>
        
        </select>
        </div>
        <div class="form-group" >
            <label>CNIC </label>
            <input type="text" id="ecnic" class="form-control" name="employer_cnic" maxlength="13" minlength="13" pattern="[0-9]{13}" placeholder="3xxxxxxxxxxxx" value= <%=employers[i].Employer_CNIC %> required/>
        </div>
        <div class="form-group" >
            <label>Email Address </label>
            <input type="text" id="email" class="form-control" name="employer_email"   placeholder="abc@gmail.com" value= <%=employers[i].Email_Address %> required/>
        </div>
        
        
        
        
        <button  type="submit" class="btn " >Edit</button>
        <div >
        
        </div>
        
        </div>
        </div>
        </div>
        </div>
        </div>
        </div>
        </form>
<% } %>
<script>
bootstrapValidate(['#fn','#ln','#efn'], 'min:3:Name should be of 3 or more characters')
bootstrapValidate('#cepwd','matches:#epwd:Password doesnot match')
bootstrapValidate('#skills','required:Select services')
bootstrapValidate(['#mn','#smn','#rmn'],'numeric:Enter valid number')
bootstrapValidate('#chpwd','matches:#hpwd:Password doesnot match')
bootstrapValidate(['#cnic','#ecnic','#scnic'],'numeric:Enter valid naw')
bootstrapValidate('#email', 'email:Enter valid email address')
bootstrapValidate(['#rn','#age','#skills'] ,'required:This field is required*')

</script>
</body>
</html>
